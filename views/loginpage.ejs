<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200&display=swap" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="/javascripts/project.js"></script>
       
    </head>
    <body>
        <form action="/admin/check_admin_login" method="post">
        <div class="loginmainbox">

            <div class="loginbox">

                <div class="container">

                    <div class="row centerstyle">

                        <div class="col-6">
                            <img src="/images/sideimage.png" width="700">
                        </div>

                        <div class="col-6" style=" box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px; border-radius: 10px;">

                            
                            <div class="row centerstyle">
                                <div class="col-12" style=" display: flex; justify-content: center; font-family: Oswald; font-size: 40; font-weight: bolder; margin-bottom: 10%;">
                                    Sign In
                                </div>

                                <div class="col-12" style="display: flex; justify-content: center; margin-bottom: 7%;">
                                    <input type="text" name="emailid" class="form-control" placeholder="Email/Mobile Number" style=" display: flex; justify-content: center; width: 60%;">
                                </div>

                                <div class="col-12" style="display: flex; justify-content: center; margin-bottom: 7%;">
                                    <input type="password" name="password" class="form-control" placeholder="Password" style=" display: flex; justify-content: center; width: 60%;">
                                </div>

                                <div class="col-12" style="display: flex; justify-content: center; margin-bottom: 7%;">
                                    <button type="submit" class="btn btn-primary" style="width: 60%;">Login</button>
                                </div>

                                <div class="col-12 centerstyletwo" style="color: red; margin-bottom: 7%;">
                                    <%= message %>
                                </div>

                                    
                                

                            </div>


                        </div>

                    </div>

                </div>






            </div>
        </div>
    </form>
    </body>
</html>


