<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200&display=swap" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="/javascripts/project.js"></script>
    </head>
    <body>
        <form action="/products/submit_product" method="post" enctype="multipart/form-data">
        <div class="mainbox">

            <div class="box">

                <div class="container">

                    <div class="row">

                        <div class="col-12 fontstyle centerstyle">
                            <img src="/images/logo.png" width="30">
                            <span>Product Register</span>
                            <a href="/products/displayallproducts" style="margin-left: auto;"><img src="/images/List.png" width="50"></a>
                        </div>

                    </div>

                    <div class="row">
                        
                        <div class="col-12 fontstyle">
                            <hr>
                        </div>

                    </div>

                    <div class="row">
                        
                        <div class="col-4">
                            <select class="form-select" id="categoryid" name="categoryid">
                                <option selected>Category</option>
                                
                              </select>
                        </div>

                        <div class="col-4">
                            <select class="form-select" id="typeid" name="typeid">
                                <option selected>Type</option>

                              </select>
                        </div>

                        <div class="col-4">
                            <select class="form-select" id="brandid" name="brandid">
                                <option selected>Brand</option>
                                
                              </select>
                        </div>

                    </div>

                    <div class="row mt-2">

                        <div class="col-12 ">
                            <input type="text" name="productname" class="form-control" placeholder="Enter Product Name">
                        </div>

                    </div>

                    <div class="row mt-2">

                        <div class="col-12 ">
                            <textarea class="form-control" rows="3" name="description" placeholder="Enter Product Description"></textarea>
                        </div>
                        
                    </div>

                    <div class="row mt-2">

                        <div class="col-6 ">
                            <input type="text" name="price" class="form-control" placeholder="Product Price">
                        </div>

                        <div class="col-6 ">
                            <input type="text" name="offerprice" class="form-control" placeholder="Product  Offer Price">
                        </div>
                        
                    </div>

                    <div class="row mt-2">

                        <div class="col-6 ">
                            <input type="text" name="stock" class="form-control" placeholder="Product Stock">
                        </div>

                        <div class="col-6 ">
                            <input type="text" name="gst" class="form-control" placeholder="GST">
                        </div>
                        
                    </div>

                    <div class="row mt-2">

                        <div class="col-6">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="gift" id="gift" value="Gift">
                                <label class="form-check-label" for="gift">Gift</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="gift" id="warranty" value="Warranty">
                                <label class="form-check-label" for="warranty">Warranty</label>
                              </div>
                        </div>

                        <div class="col-6">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="cont" value="Continue">
                                <label class="form-check-label" for="cont">Continue</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="dcont" value="Dis Continue">
                                <label class="form-check-label" for="wardcontranty">Dis Continue</label>
                              </div>
                        </div>

                    </div>

                    <div class="row mt-2">
                        
                        <div class="col-6">
                            <label for="picture" class="form-label">Upload Product Image</label>
                            <input accept="image/jpeg, image/png" class="form-control" type="file" id="picture" name="picture">
                        </div>

                        <div class="col-6 centerstyletwo" >
                            <img src="/images/image.png" width="60" id="productimage" style="border-radius: 10%;">
                        </div>

                    </div>

                    <div class="row mt-2">
                        
                        <div class="col-6 centerstyletwo">
                            <button type="submit" class="btn btn-primary" style="width: 200px;">Submit</button>
                        </div>

                        <div class="col-6 centerstyletwo" >
                            <button type="reset" class="btn btn-primary" style="width: 200px;">Reset</button>
                        </div>

                    </div>

                    <div class="row mt-2">
                        <div class="col-12 centerstyletwo" style="background: lightgreen;">
                            <%= message %>
                        </div>
                    </div>



               
               
               
                </div>

            </div>
            
        </div>
    </form>
    </body>
</html>