<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200&display=swap" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="/javascripts/project.js"></script>
    </head>
    <body>
        <form action="/products/edit_delete_product" method="post">
            <input type="hidden" value="<%=data.productid%>" name="productid">
        <div class="mainbox">

            <div class="box">

                <div class="container">

                    <div class="row">

                        <div class="col-12 fontstyle centerstyle">
                            <img src="/images/logo.png" width="30">
                            <span>Product Register</span>
                            <a href="/products/displayallproducts" style="margin-left: auto;"><img src="/images/List.png" width="50"></a>
                        </div>

                    </div>

                    <div class="row">
                        
                        <div class="col-12 fontstyle">
                            <hr>
                        </div>

                    </div>

                    <div class="row">
                        
                        <div class="col-4">
                            <select class="form-select" id="categoryid" name="categoryid">
                                <option value="<%= data.categoryid %>"><%= data.categoryname %></option>
                                
                              </select>
                        </div>

                        <div class="col-4">
                            <select class="form-select" id="typeid" name="typeid">
                                <option value="<%= data.typeid %>"><%= data.typename %></option>

                              </select>
                        </div>

                        <div class="col-4">
                            <select class="form-select" id="brandid" name="brandid">
                                <option value="<%= data.brandid %>"><%= data.brandname %></option>
                                
                              </select>
                        </div>

                    </div>

                    <div class="row mt-2">

                        <div class="col-12 ">
                            <input type="text" value="<%= data.productname %>" name="productname" class="form-control" placeholder="Enter Product Name">
                        </div>

                    </div>

                    <div class="row mt-2">

                        <div class="col-12 ">
                            <textarea class="form-control" rows="3" value="<%= data.description %>" name="description" placeholder="Enter Product Description"><%= data.description %></textarea>
                        </div>
                        
                    </div>

                    <div class="row mt-2">

                        <div class="col-6 ">
                            <input type="text" value="<%= data.price %>" name="price" class="form-control" placeholder="Product Price">
                        </div>

                        <div class="col-6 ">
                            <input type="text" value="<%= data.offerprice %>" name="offerprice" class="form-control" placeholder="Product  Offer Price">
                        </div>
                        
                    </div>

                    <div class="row mt-2">

                        <div class="col-6 ">
                            <input type="text"value="<%= data.stock %>" name="stock" class="form-control" placeholder="Product Stock">
                        </div>

                        <div class="col-6 ">
                            <input type="text" value="<%= data.gst %>" name="gst" class="form-control" placeholder="GST">
                        </div>
                        
                    </div>

                    <%
                        var st = data.gift.split(',')
                        var gift = {'Gift':false,'Warranty':false}
                        
                        if(st.length > 1)
                        {st.map((item)=>{

                            gift[item]=true

                        })}

                        else
                        {
                            gift[data.gift]=true
                        }

                        var avl = {'Continue':false,'Discontinue':false}
                        avl[data.status]=true

                    %>
                    <!-- Length <%= st.length%>
                    Value <%= gift['Gift'] %> <%= gift['Warranty'] %> -->



                    <div class="row mt-2">

                        <div class="col-6">
                            <div class="form-check form-check-inline">
                                <input <%=gift['Gift']?'checked':'' %> class="form-check-input" type="checkbox" name="gift" id="gift" value="Gift">
                                <label class="form-check-label" for="gift">Gift</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input <%=gift['Warranty']?'checked':'' %> class="form-check-input" type="checkbox" name="gift" id="warranty" value="Warranty">
                                <label class="form-check-label" for="warranty">Warranty</label>
                              </div>
                        </div>

                        <div class="col-6">
                            <div class="form-check form-check-inline">
                                <input <%=avl['Continue']?'checked':'' %> class="form-check-input" type="radio" name="status" id="cont" value="Continue">
                                <label class="form-check-label" for="cont">Continue</label>
                              </div>
                              <div class="form-check form-check-inline">
                                <input <%=avl['Discontinue']?'checked':'' %> class="form-check-input" type="radio" name="status" id="dcont" value="Dis Continue">
                                <label class="form-check-label" for="wardcontranty">Dis Continue</label>
                              </div>
                        </div>

                    </div>

                    
                    </div>

                    <div class="row mt-2">
                        
                        <div class="col-6 centerstyletwo">
                            <button type="submit" name="btn" value="Edit" class="btn btn-primary" style="width: 200px;">Edit</button>
                        </div>

                        <div class="col-6 centerstyletwo" >
                            <button type="submit" name="btn" value="Delete" class="btn btn-primary" style="width: 200px;">Delete</button>
                        </div>

                    </div>




               
               
               
                </div>

            </div>
            
        </div>
    </form>
    </body>
</html>